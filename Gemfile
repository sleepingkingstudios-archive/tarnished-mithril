source 'https://rubygems.org'

gem 'thin' # web server
gem 'sinatra', :require => 'sinatra/base'
gem 'rake'

# Assets
gem 'json'
gem 'haml'
gem 'sass'
gem 'coffee-script'

# ORM/database
gem 'activerecord'
gem 'sinatra-activerecord'
gem 'pg'

# Password Encryption
gem 'bcrypt-ruby', '~> 3.0.0'

# Testing
group :test do
  gem 'rspec'
  gem 'factory_girl'
  gem 'database_cleaner'
end # group test
